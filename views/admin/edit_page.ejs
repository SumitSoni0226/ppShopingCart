<%- include('../layout/adminHeader'); %>

<h2 class="page-title mb-4">Edit page</h2>
<a href="/admin/pages" class="btn btn-light mb-4">Back to all pages</a>

<form method="POST" action="/admin/pages/edit-page/<%= id %>" autocomplete="off">

    <div class="form-group">
        <label>Title:</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title" required>
    </div>
    <div class="form-group">
        <label>Slug:</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="form-group">
        <label>Content:</label>
        <textarea class="form-control" name="content" id="ta" cols="30" rows="10" placeholder="Content" required><%= content %></textarea>
    </div>
    
    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-success my-3">Submit</button>
</form>

<%- include('../layout/adminFooter'); %>
